@model IEnumerable<Book>
@{
}
 <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
 
<div >
  

    <h1>All Books</h1>
   @*  <a asp-controller="Item" asp-action="New" class="btn btn-outline-dark text-capitalize" style="margin:20px 50% 20px 0; "><i class="fa-light fa-trash"></i> &nbsp; Add New Item</a> *@
    <table class="table table-striped ">
        <thead class="bg-danger">
            <tr>
                <th scope="col">Titel</th>
                <th scope="col">AuthorId</th>
                <th scope="col">Price</th>
                <th scope="col">Update Or Delet</th>
                <th scope="col">Add To Cart</th>
               
               

                
            </tr>
        </thead>
        <tbody>
              @foreach(var item in Model)
                {
            <tr>
              
                    <th scope="row">@item.Title</th>
                    
                   <td>@item.AuthorId</td>
                <td>@item.Price</td>
                    <td >
                        <a asp-route-id="@item.BookId" asp-action="Edit" asp-controller="books" class="btn btn-outline-danger"><i class="fa-sharp fa-solid fa-pen-to-square"></i></a>
                        <a asp-action="Delet" asp-controller="books" asp-route-id="@item.BookId" class="btn btn-outline-dark"><i class="fa-solid fa-trash"></i></a>
                    </td>

                    <td>    <a asp-route-id="@item.BookId" asp-action="Index" asp-controller="Cart" class="btn btn-outline-danger">
                            <i class="fa-sharp fa-solid fa-cart-plus text-danger"></i>
                    </a></td>
              
            </tr>
            }
            
        </tbody>
       
    </table>
    <a style="margin-bottom:50px;" asp-action="New" asp-controller="books" class="btn btn-outline-danger"><i class="fa-solid fa-plus m-1"></i>Add New Book</a>
  
</div>


