@{
}

@using bookstore1.Models.Entity;
@model Cart
@{
    ViewData["Title"] = "Edit";
}
<form  style="margin:60px;" method="post">
    <input type="hidden" asp-for="@Model.CartId" />
    <div class="container border cont border-danger ">

        <h1 class="text-danger text-center">Update Order</h1>
       
        <div class="form-group row m-4 ">
            <label asp-for="Titel" class="col-sm-2 col-form-label col-form-label-sm text-danger">Titel</label>
            <div class="col-sm-8">
                <input readonly class="form-control form-control-sm " id="colFormLabelSm" placeholder="Enter Titel of Book" asp-for="Titel">
                <span asp-validation-for="Titel" class="text-black"></span>
              
            </div>


        </div>
       

        <div class="form-group row m-4">
            <label asp-for="price" class="col-sm-2 col-form-label text-danger">price</label>
            <div class="col-sm-8">
                <input readonly class="form-control" id="colFormLabel" placeholder="Enter Price" asp-for="price">
                <span asp-validation-for="price" class="text-dark"></span>
            </div>

        </div>
      
        <div class="form-group row m-4">

            <label asp-for="count" class="col-sm-2 col-form-label text-danger">Count</label>
            <div class="col-sm-8">
                <input class="form-control" id="colFormLabel" placeholder="Enter AuthorId" asp-for="count">
                <span asp-validation-for="count" class="text-dark"></span>
            </div>

        </div>
          
            <hr />


            <div class="form-group row m-4">
            <button type="submit" class="btn btn-outline-danger m-1 save" style="width:150px" id="s"><i class="fa-sharp fa-solid fa-pen-to-square"></i></button>

            <a asp-controller="Cart" asp-action="All" class="btn btn-outline-dark back" style="width:200px" id="b"><i class="fa-solid fa-backward m-1 "></i>Back to Cart</a>
            </div>

      
       
    </div>

</form>


